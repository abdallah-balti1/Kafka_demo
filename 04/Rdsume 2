// @flow
import {
  GET_PRODUCTS_REQUEST,
  GET_PRODUCTS_SUCCESS,
  GET_PRODUCTS_FAILURE,
  GET_FILTERED_PRODUCTS_REQUEST,
  GET_FILTERED_PRODUCTS_SUCCESS,
  GET_FILTERED_PRODUCTS_FAILURE,
} from './actions';

type ProductsState = {
  products: Array<any>,
  filteredMuProducts: Array<any>,
  isLoading: boolean,
  error: ?any,
};

const initialState: ProductsState = {
  products: [],
  filteredMuProducts: [],
  isLoading: false,
  error: null,
};

export default function productsReducer(
  state: ProductsState = initialState,
  action: any,
): ProductsState {
  switch (action.type) {
    case GET_PRODUCTS_REQUEST:
      return {
        ...state,
        isLoading: true,
        error: null,
      };
    
    case GET_PRODUCTS_SUCCESS:
      return {
        ...state,
        products: action.payload,
        isLoading: false,
        error: null,
      };
    
    case GET_PRODUCTS_FAILURE:
      return {
        ...state,
        isLoading: false,
        error: action.payload,
      };
    
    case GET_FILTERED_PRODUCTS_REQUEST:
      return {
        ...state,
        isLoading: true,
        error: null,
      };
    
    case GET_FILTERED_PRODUCTS_SUCCESS:
      return {
        ...state,
        filteredMuProducts: action.payload,
        isLoading: false,
        error: null,
      };
    
    case GET_FILTERED_PRODUCTS_FAILURE:
      return {
        ...state,
        isLoading: false,
        error: action.payload,
      };
    
    default:
      return state;
  }
}
