// components/PocCell.tsx
import React, { useEffect, useState } from "react";
import fetchUserPoc from "services/pocs"; // make sure this returns the POC for one user

interface PocCellProps {
  userId: string;
}

const PocCell: React.FC<PocCellProps> = ({ userId }) => {
  const [pocName, setPocName] = useState<string | null>(null);

  useEffect(() => {
    const loadPoc = async () => {
      try {
        const data = await fetchUserPoc(userId);
        setPocName(data?.name || null);
      } catch (error) {
        console.error("Error fetching POC for user", userId, error);
        setPocName(null);
      }
    };
    loadPoc();
  }, [userId]);

  return (
    <span>{pocName || <i className="text-gray-400">None</i>}</span>
  );
};

export default PocCell;
