from pydantic import BaseModel
from typing import List, Optional
from src.main.domain.enums.role_enum import EnumRole

# Create a nested DTO for POC response
class PocDto(BaseModel):
    id: str
    name: str
    url: str
    start_date: str
    end_date: str
    start_using: str
    end_using: str

class UserDto(BaseModel):
    userId: str
    firstName: str
    lastName: str
    mail: str
    role: EnumRole
    active: bool
    pocs: Optional[List[PocDto]] = []  # Now includes POC details

    class Config:
        orm_mode = True
