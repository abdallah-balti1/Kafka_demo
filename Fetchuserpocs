import axiosInstance from "utils/customizedAxios";
import { User } from "schemas/user";
import { Pocs } from "schemas/pocs";

export const assignUserToPoc = async (
  user: User,
  poc: Pocs,
  startUsing: string,
  endUsing: string,
  isUpdate: boolean = false // default to POST for creation
): Promise<void> => {
  const method = isUpdate ? "put" : "post";

  await axiosInstance[method]("/manage/user/poc", {
    user,
    poc,
    startUsing,
    endUsing,
  });
};
